# {{ ansible_managed }}

<Virtualhost *:80>
    ServerName localhost
</Virtualhost>

{% for vhost in virtualhosts %}  

<Virtualhost *:80>

    ServerName {{ vhost.servername }}
    {% if vhost.serveralias is defined %}
        ServerAlias {{ vhost.serveralias }}
    {% endif %}

    DocumentRoot {{ vhost.documentroot }}

    <Directory "{{ vhost.documentroot }}">
        AllowOverride All
    </Directory>

</Virtualhost>

{% endfor %}
